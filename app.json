{
  "expo": {
    "name": "verbify",
    "slug": "verbify",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/icon.png",
    "scheme": "verbify",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ykucukkesim.verbify",
      "buildNumber": "1",
      "associatedDomains": [
        "applinks:grateful-zebra-76.clerk.accounts.dev",
        "webcredentials:grateful-zebra-76.clerk.accounts.dev"
      ],
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Verbify needs camera access to record and import videos for caption generation.",
        "NSMicrophoneUsageDescription": "Verbify needs microphone access to record audio for your videos.",
        "NSPhotoLibraryUsageDescription": "Verbify needs photo library access to import videos.",
        "NSPhotoLibraryAddUsageDescription": "Verbify needs permission to save your captioned videos to the photo library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./src/assets/images/icon.png",
        "backgroundImage": "./src/assets/images/icon.png",
        "monochromeImage": "./src/assets/images/icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO"
      ],
      "package": "com.ykucukkesim.verbify"
    },
    "web": {
      "output": "static",
      "favicon": "./src/assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./src/assets/images/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-font",
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "16.0"
          }
        }
      ],
      "expo-video",
      "expo-audio",
      [
        "expo-media-library",
        {
          "photosPermission": "Allow ${PRODUCT_NAME} to access your photos.",
          "savePhotosPermission": "Allow ${PRODUCT_NAME} to save photos to your library.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "f65e98ca-bf7d-4649-be6f-7c61885492ec"
      }
    }
  }
}
